{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format:write": "prettier --write \"**/*.{js,mjs,cjs,ts,tsx,css,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,cjs,ts,tsx,css,json,md}\"",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "trpc-openapi": "^1.2.0",
    "patch-package": "^8.0.0"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.6",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@trpc/server": "^11.0.0-rc.374"
  },
  "overrides": {
    "trpc-openapi": {
      "@trpc/server": "$@trpc/server"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
